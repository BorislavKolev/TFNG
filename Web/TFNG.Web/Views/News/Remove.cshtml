@model TFNG.Web.ViewModels.News.NewsDeleteViewModel
@{
    ViewData["Title"] = "Remove news post";
}
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-8">
            <div class="title-single-box">
                <h1 class="title-single">Remove news post</h1>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">
        </div>
    </div>
</div>

<section class="contact">
    <div class="container">
        <form asp-action="Remove" method="post" role="form" class="php-email-form" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Title"></label>
                        <input asp-for="Title" type="text" name="name" class="form-control form-control-lg form-control-a" placeholder="Title" disabled="">
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Content"></label>
                        <textarea asp-for="Content" class="form-control" rows="5" disabled=""></textarea>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Author"></label>
                        <input asp-for="Author" type="text" name="adress" class="form-control form-control-lg form-control-a" placeholder="Author" disabled="">
                    </div>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="text-center">
                    <p>Are you sure you want to delete this news post?</p>
                    <input type="submit" value="Yes!" class="btn btn-danger btn-rounded" />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </form>
    </div>
</section> 