@model TFNG.Web.ViewModels.Awards.AwardsEditViewModel
@{
    ViewData["Title"] = "Edit award";
}

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-8">
            <div class="title-single-box">
                <h1 class="title-single">Edit award</h1>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">
        </div>
    </div>
</div>

<section class="contact">
    <div class="container">
        <form asp-action="Edit" method="post" role="form" class="php-email-form" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input asp-for="Name" type="text" name="name" class="form-control form-control-lg form-control-a" placeholder="Name" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Date"></label>
                        <input asp-for="Date" type="datetime-local" name="date" class="form-control form-control-lg form-control-a">
                        <span asp-validation-for="Date"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Location"></label>
                        <input asp-for="Location" type="text" name="location" class="form-control form-control-lg form-control-a" placeholder="Location" data-rule="minlen:4" >

                        <span asp-validation-for="Location"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Place"></label>
                        <input asp-for="Place" type="text" name="place" class="form-control form-control-lg form-control-a" placeholder="Place" data-rule="minlen:4">

                        <span asp-validation-for="Place"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3" enctype="multipart/form-data">
                    <hr />
                    <label class="control-label" asp-for="Picture"></label>
                    <input asp-for="Picture" type="file" name="Picture" multiple class="form-control" />
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <div class="text-center">
                        <input type="submit" value="Save Changes" class="btn btn-a" />
                    </div>
                }
            </div>
        </form>
    </div>
</section> 