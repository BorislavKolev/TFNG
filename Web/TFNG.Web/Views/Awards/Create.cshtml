@model TFNG.Web.ViewModels.Awards.AwardsCreateInputModel
@{
    ViewData["Title"] = "Create new award";
}


<h1>@this.ViewData["Title"]</h1>

<hr />
<section class="contact">
    <div class="container">
        <form asp-action="Create" method="post" role="form" enctype="multipart/form-data" class="php-email-form">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input asp-for="Name" type="text" name="name" class="form-control form-control-lg form-control-a" placeholder="Name" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Date">Date time in format: yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</label>
                        <input asp-for="Date" type="datetime-local" name="date" class="form-control form-control-lg form-control-a">

                        <span asp-validation-for="Date"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Location"></label>
                        <input asp-for="Location" type="text" name="location" class="form-control form-control-lg form-control-a" placeholder="FolkloreArea" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="Location"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Place"></label>
                        <input asp-for="Place" type="text" name="place" class="form-control form-control-lg form-control-a" placeholder="Place" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject">

                        <span asp-validation-for="Place"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3" enctype="multipart/form-data">
                    <hr />
                    <label class="control-label" asp-for="Picture"></label>
                    <input asp-for="Picture" type="file" name="Picture" class="form-control" />
                </div>
                <input asp-page-handler="Upload" class="btn" type="submit" value="Upload" />
            </div>
        </form>
    </div>
</section> 