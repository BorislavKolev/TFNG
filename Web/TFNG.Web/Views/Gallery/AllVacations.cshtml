@model TFNG.Web.ViewModels.Gallery.GalleryListViewModel
@using System.Globalization;
@{
    this.ViewData["Title"] = "Vacations Gallery";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <h2>Весели преживявания</h2>
        @if (this.User.IsInRole("Administrator"))
        {
            <a asp-controller="Gallery" asp-action="Create">Create</a>
        }
    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container">
        <div class="row portfolio-container">
            @foreach (var picture in Model.Pictures)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                    <div class="portfolio-wrap">
                        <img src="@picture.ImageUrl" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <div class="portfolio-links">
                                <a href="@picture.ImageUrl" data-gall="portfolioGallery" class="venobox"><i class="bx bx-plus"></i></a>
                                @if (this.User.IsInRole("Administrator"))
                                {
                                    <a asp-controller="Gallery" asp-action="Remove" asp-route-id="@picture.Id" type="submit"><i class="bx bx-x-circle"></i></a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section><!-- End Portfolio Section -->
<section id="blog" class="blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 entries">
                <div class="blog-pagination">
                    <ul class="justify-content-center">
                        @if (this.Model.CurrentPage == 1)
                        {
                            <li class="disabled"><i class="icofont-rounded-left"></i></li>
                        }
                        else
                        {
                            <li class="previous"><a asp-route="galleryVacationsRoute" asp-route-name="" asp-route-page="@(this.Model.CurrentPage - 1)"><i class="icofont-rounded-left"></i></a></li>

                        }
                        @for (int i = 1; i <= this.Model.PagesCount; i++)
                        {
                            var active = i == this.Model.CurrentPage ? "class=active" : string.Empty;
                            <li @active><a asp-route="galleryVacationsRoute" asp-route-name="" asp-route-page="@i">@i</a></li>
                        }
                        @if (this.Model.CurrentPage == this.Model.PagesCount)
                        {
                            <li class="disabled"><i class="icofont-rounded-right"></i></li>
                        }
                        else
                        {
                            <li class="next"><a asp-route="galleryVacationsRoute" asp-route-name="" asp-route-page="@(this.Model.CurrentPage + 1)"><i class="icofont-rounded-right"></i></a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>