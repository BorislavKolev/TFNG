@model TFNG.Web.ViewModels.Gallery.PictureDeleteViewModel
@{
    ViewData["Title"] = "Remove picture";
}
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12 col-lg-8">
            <div class="title-single-box">
                <h1 class="title-single">Remove picture</h1>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">
        </div>
    </div>
</div>

<section class="contact">
    <div class="container">
        <form asp-action="Remove" method="post" role="form" class="php-email-form" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Id"></label>
                        <input asp-for="Id" type="text" name="id" class="form-control form-control-lg form-control-a" placeholder="Id" disabled="">
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label class="control-label" asp-for="Type"></label>
                        <input asp-for="Type" type="text" name="type" class="form-control form-control-lg form-control-a" placeholder="Type" disabled="">
                    </div>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="text-center">
                    <p>Are you sure you want to delete this dance?</p>
                    <input type="submit" value="Yes!" class="btn btn-danger btn-rounded" />
                </div>
            }
        </form>
    </div>
